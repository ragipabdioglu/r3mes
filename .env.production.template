# R3MES Production Environment Configuration Template
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control

# Environment Configuration
R3MES_ENV=production
CHAIN_ID=remes-mainnet-1

# Network Endpoints (Production URLs)
RPC_URL=https://rpc.r3mes.network:26657
REST_URL=https://api.r3mes.network:1317

# Secrets (MUST be provided via Vault or AWS Secrets Manager)
# These values should be loaded from secure secret management
R3MES_MNEMONIC_VAULT_PATH=secret/r3mes/production/mnemonic
R3MES_JWT_SECRET_VAULT_PATH=secret/r3mes/production/jwt_secret
R3MES_DATABASE_URL_VAULT_PATH=secret/r3mes/production/database_url
R3MES_REDIS_PASSWORD_VAULT_PATH=secret/r3mes/production/redis_password

# Vault Configuration
VAULT_ADDR=${VAULT_ADDR}
VAULT_TOKEN=${VAULT_TOKEN}

# Model Configuration
MODEL_PATH=/opt/r3mes/models/llama-3-8b
IPFS_NODE=/ip4/ipfs.r3mes.network/tcp/5001

# Database Configuration (loaded from Vault)
DATABASE_URL=${R3MES_DATABASE_URL}
BLOCKCHAIN_RPC_URL=${R3MES_BLOCKCHAIN_RPC_URL}

# Security Configuration (loaded from Vault)
JWT_SECRET=${R3MES_JWT_SECRET}
REDIS_PASSWORD=${R3MES_REDIS_PASSWORD}

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CACHE_TTL=300