# R3MES Backend Development Environment Configuration
# Copy this file to .env and fill in actual values for local development

# ============================================================================
# Environment Mode
# ============================================================================
R3MES_ENV=development

# ============================================================================
# Database Configuration
# ============================================================================
# Database type: sqlite or postgresql
DATABASE_TYPE=sqlite

# SQLite database path (for DATABASE_TYPE=sqlite)
DATABASE_PATH=backend/database.db

# PostgreSQL connection URL (for DATABASE_TYPE=postgresql)
# DATABASE_URL=postgresql://user:password@localhost:5432/r3mes_dev

# ============================================================================
# Redis Configuration
# ============================================================================
# Redis connection URL (localhost is acceptable for development)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Blockchain Configuration
# ============================================================================
# Blockchain RPC URL (Tendermint RPC)
# In development, localhost is acceptable
BLOCKCHAIN_RPC_URL=http://localhost:26657

# Blockchain gRPC URL
# In development, localhost is acceptable
BLOCKCHAIN_GRPC_URL=localhost:9090

# Blockchain REST API URL
# In development, localhost is acceptable
BLOCKCHAIN_REST_URL=http://localhost:1317

# ============================================================================
# API Configuration
# ============================================================================
# Backend API server port
BACKEND_PORT=8000

# CORS allowed origins (comma-separated)
# In development, localhost is acceptable
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ============================================================================
# Faucet Configuration
# ============================================================================
# Enable faucet for test token distribution (development only)
FAUCET_ENABLED=true

# Faucet key name in remesd keyring
FAUCET_KEY_NAME=faucet_key

# Path to remesd binary
REMESD_PATH=/usr/local/bin/remesd

# Path to remesd home directory
REMESD_HOME=~/.remes

# ============================================================================
# Model Configuration
# ============================================================================
# Use mock model instead of real AI model (for testing)
R3MES_USE_MOCK_MODEL=false

# Path to base AI model
BASE_MODEL_PATH=checkpoints/base_model

# IPFS gateway URL for model downloads
IPFS_GATEWAY_URL=http://localhost:8080/ipfs/

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file (optional, enables file logging)
# LOG_FILE=backend/logs/r3mes_backend.log

# ============================================================================
# Security Configuration
# ============================================================================
# Secret key for API key hashing (must be at least 32 characters)
# Generate a secure random string for production
API_KEY_SECRET=dev-secret-key-change-in-production-min-32-chars

# Secret key for JWT signing (optional, must be at least 32 characters if set)
# JWT_SECRET=dev-jwt-secret-change-in-production-min-32-chars

# ============================================================================
# Rate Limiting
# ============================================================================
# Rate limit for chat endpoints
RATE_LIMIT_CHAT=10/minute

# Rate limit for GET endpoints
RATE_LIMIT_GET=30/minute

# ============================================================================
# Feature Flags
# ============================================================================
# Auto-start mining on startup
AUTO_START_MINING=false

# Enable notifications
ENABLE_NOTIFICATIONS=true

# ============================================================================
# Chain JSON Path
# ============================================================================
# Path to chain.json file (for blockchain sync)
CHAIN_JSON_PATH=chain.json

# ============================================================================
# Important Notes
# ============================================================================
# 1. This is a development configuration file
# 2. For production, use .env.production.example as a template
# 3. Never commit actual .env files to Git
# 4. All sensitive values should be changed in production
# 5. In production, localhost URLs are NOT allowed
