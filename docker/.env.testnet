# R3MES Testnet Environment Variables
# Domain: r3mes.network
# Generated: 2025-01-27

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=r3mes
# POSTGRES_PASSWORD is managed via Docker Secrets (docker/secrets/postgres_password.txt)
POSTGRES_DB=r3mes
POSTGRES_PORT=5432

# ============================================
# Redis Configuration
# ============================================
# REDIS_PASSWORD is managed via Docker Secrets (docker/secrets/redis_password.txt)
REDIS_PORT=6379

# ============================================
# Blockchain Configuration
# ============================================
CHAIN_ID=r3mes-testnet-1

# ============================================
# Backend Configuration
# ============================================
R3MES_ENV=production
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://r3mes.network,https://www.r3mes.network,http://localhost:3000
CORS_ALLOW_ALL=false

# Rate Limiting
RATE_LIMIT_CHAT=10/minute
RATE_LIMIT_GET=30/minute

# Model Configuration
BASE_MODEL_PATH=/app/checkpoints/base_model
MODEL_DOWNLOAD_DIR=/app/models

# Mining Settings
MINING_DIFFICULTY=1234.0
GPU_MEMORY_LIMIT_MB=
P2P_PORT=9090

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=https://r3mes.network/api
NEXT_PUBLIC_BACKEND_URL=https://r3mes.network/api
NEXT_PUBLIC_SITE_URL=https://r3mes.network
NEXT_PUBLIC_RPC_URL=https://rpc.r3mes.network
NEXT_PUBLIC_REST_URL=https://api.r3mes.network

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# SSL/HTTPS Configuration
# ============================================
DOMAIN=r3mes.network
EMAIL=rabdioglu@gmail.com

# ============================================
# Port Configuration
# ============================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ============================================
# Monitoring Configuration
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ROOT_URL=https://r3mes.network/grafana

