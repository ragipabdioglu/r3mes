{{ define "email.html" }}
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; }
    .alert { background-color: #fee; border-left: 4px solid #f00; padding: 10px; margin: 10px 0; }
    .info { background-color: #eef; border-left: 4px solid #00f; padding: 10px; margin: 10px 0; }
  </style>
</head>
<body>
  <h2>R3MES Alert Notification</h2>
  {{ range .Alerts }}
  <div class="alert">
    <h3>{{ .Labels.alertname }}</h3>
    <p><strong>Severity:</strong> {{ .Labels.severity }}</p>
    <p><strong>Service:</strong> {{ .Labels.service }}</p>
    <p><strong>Description:</strong> {{ .Annotations.description }}</p>
    <p><strong>Summary:</strong> {{ .Annotations.summary }}</p>
    <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05" }}</p>
  </div>
  {{ end }}
</body>
</html>
{{ end }}

