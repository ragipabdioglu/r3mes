# R3MES Miner Engine Development Environment Configuration
# Copy this file to .env and fill in actual values for local development

# ============================================================================
# Environment Mode
# ============================================================================
R3MES_ENV=development

# ============================================================================
# Blockchain Configuration
# ============================================================================
# Chain ID
CHAIN_ID=remes-testnet-1

# Blockchain gRPC URL (for transaction submission and queries)
# In development, localhost is acceptable
R3MES_NODE_GRPC_URL=localhost:9090

# Blockchain REST API URL (alternative query method)
# In development, localhost is acceptable
R3MES_BLOCKCHAIN_REST_URL=http://localhost:1317

# Blockchain RPC URL (Tendermint RPC)
# In development, localhost is acceptable
R3MES_BLOCKCHAIN_RPC_URL=http://localhost:26657

# ============================================================================
# IPFS Configuration
# ============================================================================
# IPFS daemon URL
# In development, localhost is acceptable
R3MES_IPFS_URL=/ip4/127.0.0.1/tcp/5001

# IPFS Gateway URL (for downloading pinned files)
R3MES_IPFS_GATEWAY_URL=http://localhost:8080/ipfs/

# ============================================================================
# Wallet Configuration
# ============================================================================
# Private key (hex format, for mining)
# WARNING: Never commit actual private keys to Git
# PRIVATE_KEY=your_private_key_hex_here

# Wallet address (derived from private key, optional if using PRIVATE_KEY)
# WALLET_ADDRESS=remes1xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# Model Configuration
# ============================================================================
# Base model path
BASE_MODEL_PATH=models

# Model IPFS hash (if using IPFS model)
# R3MES_MODEL_IPFS_HASH=QmYourModelHashHere

# Model name (if using HuggingFace)
# R3MES_MODEL_NAME=meta-llama/Meta-Llama-3-8B

# GGUF model path (for llama-cpp-python)
# R3MES_GGUF_MODEL_PATH=models/Meta-Llama-3-8B-Instruct.Q4_K_M.gguf

# ============================================================================
# Training Configuration
# ============================================================================
# Model parameters
MODEL_HIDDEN_SIZE=768
LORA_RANK=8
LEARNING_RATE=0.0001

# Training settings
DETERMINISTIC=true
GRADIENT_ACCUMULATION_STEPS=4
TOP_K_COMPRESSION=0.1
BATCH_SIZE=4

# ============================================================================
# GPU Configuration
# ============================================================================
# Multi-GPU settings
USE_MULTI_GPU=false
MULTI_GPU_DEVICE_IDS=0,1
USE_DDP=false

# GPU memory limit (MB, optional)
# GPU_MEMORY_LIMIT_MB=8192

# ============================================================================
# Network Configuration
# ============================================================================
# P2P port for miner communication
P2P_PORT=9090

# Arrow Flight port (for gradient verification)
R3MES_ARROW_FLIGHT_PORT=8815

# Verification service address
# In development, localhost is acceptable
R3MES_VERIFICATION_SERVICE_ADDR=localhost:50051

# ============================================================================
# TLS/SSL Configuration
# ============================================================================
# Enable TLS/mTLS (usually false in development)
R3MES_TLS_ENABLED=false

# TLS certificate paths (if TLS enabled)
# R3MES_TLS_CERT_PATH=/path/to/cert.pem
# R3MES_TLS_KEY_PATH=/path/to/key.pem
# R3MES_TLS_CA_PATH=/path/to/ca.pem

# ============================================================================
# Backend API Configuration
# ============================================================================
# Backend API URL (for version check, time sync, faucet, etc.)
# In development, localhost is acceptable
R3MES_BACKEND_URL=http://localhost:8000

# ============================================================================
# Logging Configuration
# ============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Use JSON logs (for structured logging)
USE_JSON_LOGS=false

# ============================================================================
# Debug Configuration (Optional)
# ============================================================================
# Enable debug mode
R3MES_DEBUG_MODE=false

# Debug level
R3MES_DEBUG_LEVEL=INFO

# Debug components (comma-separated)
# R3MES_DEBUG_COMPONENTS=engine,training,blockchain

# ============================================================================
# Important Notes
# ============================================================================
# 1. This is a development configuration file
# 2. For production, use env.production.example as a template
# 3. Never commit actual .env files to Git
# 4. Never commit private keys or sensitive data
# 5. In production, all URLs must use actual hostnames (no localhost)
# 6. In production, TLS should be enabled for secure communication
