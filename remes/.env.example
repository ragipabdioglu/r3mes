# Remes Blockchain Configuration

# Application Configuration
REMES_ADDRESS_PREFIX=remes
REMES_COIN_TYPE=9999
REMES_NODE_HOME=
REMES_ENVIRONMENT=development

# Logging Configuration
LOG_LEVEL=info
SENTRY_DSN=

# Feature Toggles
ENABLE_WEBSOCKET=true
ENABLE_DASHBOARD=true

# Genesis Configuration
GENESIS_DEFAULT_REWARD=5000000
GENESIS_MIN_REWARD=1000000
GENESIS_MAX_REWARD=10000000
GENESIS_MODEL_VERSION=v1.0.0

# Network Configuration
P2P_LADDR=tcp://0.0.0.0:26656
RPC_LADDR=tcp://0.0.0.0:26657
API_ADDRESS=tcp://0.0.0.0:1317
GRPC_ADDRESS=0.0.0.0:9090

# Security Configuration
ENABLE_UNSAFE_CORS=false
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Performance Configuration
CACHE_SIZE=10000
MAX_OPEN_CONNECTIONS=900
MAX_IDLE_CONNECTIONS=30

# Development Configuration (only for development environment)
ENABLE_PROFILING=false
DEBUG_MODE=false
ENABLE_METRICS=true