[Unit]
Description=Certbot Certificate Renewal Timer
Requires=certbot-renew.service

[Timer]
# Check for renewal twice daily (at 2 AM and 2 PM)
OnCalendar=*-*-* 02:00:00
OnCalendar=*-*-* 14:00:00
# Run immediately if missed
Persistent=true
# Random delay to avoid thundering herd (0-30 minutes)
RandomizedDelaySec=1800

[Install]
WantedBy=timers.target

