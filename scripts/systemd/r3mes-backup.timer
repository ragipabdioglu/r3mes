[Unit]
Description=R3MES Database Backup Timer
Requires=r3mes-backup.service

[Timer]
# Daily backup at 2 AM
OnCalendar=daily
OnCalendar=*-*-* 02:00:00
# Run immediately if missed
Persistent=true
# Random delay to avoid thundering herd (0-30 minutes)
RandomizedDelaySec=1800

[Install]
WantedBy=timers.target

